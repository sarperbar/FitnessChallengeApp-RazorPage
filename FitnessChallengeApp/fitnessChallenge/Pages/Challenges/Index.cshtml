@page
@model fitnessChallenge.Pages.Challenges.IndexModel
@using fitnessChallenge.Models

<h2>Challenges</h2>

<form method="get">
    <div>
        <label>Keyword</label>
        <input type="text" asp-for="Search.Keyword" class="form-control" />
    </div>
    <div>
        <label>Difficulty</label>
        <select asp-for="Search.Difficulty" asp-items="Html.GetEnumSelectList<Challenge.Difficulty_Level>()" class="form-control">
            <option value="">All</option>
        </select>
    </div>
    <div>
        <label>Category</label>
        <select asp-for="Search.Category" asp-items="Html.GetEnumSelectList<Challenge.CategoryType>()" class="form-control">
            <option value="">All</option>
        </select>
    </div>
    <div>
        <label>Start Date</label>
        <input type="date" asp-for="Search.StartDate" class="form-control" />
    </div>
    <div>
        <label>End Date</label>
        <input type="date" asp-for="Search.EndDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a href=".\Challenges" class="btn btn-secondary">Clear</a>
</form>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Difficulty Level</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var challenge in Model.Challenges)
        {
            <tr>
                <td>@challenge.Title</td>
                <td>@challenge.Description</td>
                <td>@challenge.StartDate.ToShortDateString()</td>
                <td>@challenge.EndDate.ToShortDateString()</td>
                <td>@challenge.DifficultyLevel</td>
                <td>@challenge.Category</td>
                <td>
                    <a asp-page="./Join" asp-route-id="@challenge.Id">Join</a>
                </td>
            </tr>
        }
    </tbody>
</table>
