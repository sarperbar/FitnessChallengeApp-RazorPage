@page
@model fitnessChallenge.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Manage your account";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>Manage your account</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <section>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ProfilePictureUrl"></label>
                    <input asp-for="Input.ProfilePictureUrl" class="form-control" />
                    <span asp-validation-for="Input.ProfilePictureUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Bio"></label>
                    <textarea asp-for="Input.Bio" class="form-control"></textarea>
                    <span asp-validation-for="Input.Bio" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </section>
        <hr />
        <div>
            <h4>Profile Picture</h4>
            @if (!string.IsNullOrEmpty(Model.Input.ProfilePictureUrl))
            {
                <img src="@Model.Input.ProfilePictureUrl" alt="Profile Picture" style="max-width: 150px; max-height: 150px;"/>
            }
            else
            {
                <p>No profile picture set.</p>
            }
        </div>
        <hr />
        <div>
            <h4>Bio</h4>
            <p>@Model.Input.Bio</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
