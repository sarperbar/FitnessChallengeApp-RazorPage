@page
@model fitnessChallenge.Pages.Challenges.CreateModel
@using fitnessChallenge.Models
@{
    ViewData["Title"] = "Create Challenge";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Create a New Challenge</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Challenge.Title" class="form-label">Challenge Title</label>
                            <input asp-for="Challenge.Title" class="form-control" placeholder="Enter challenge title" />
                            <span asp-validation-for="Challenge.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Challenge.Description" class="form-label">Description</label>
                            <textarea asp-for="Challenge.Description" class="form-control" rows="3" placeholder="Enter challenge description"></textarea>
                            <span asp-validation-for="Challenge.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Challenge.StartDate" class="form-label">Start Date</label>
                            <input asp-for="Challenge.StartDate" type="date" class="form-control" />
                            <span asp-validation-for="Challenge.StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Challenge.EndDate" class="form-label">End Date</label>
                            <input asp-for="Challenge.EndDate" type="date" class="form-control" />
                            <span asp-validation-for="Challenge.EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Challenge.DifficultyLevel" class="form-label">Difficulty Level</label>
                            <select asp-for="Challenge.DifficultyLevel" asp-items="Html.GetEnumSelectList<Challenge.Difficulty_Level>()" class="form-control"></select>
                            <span asp-validation-for="Challenge.DifficultyLevel" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Challenge.Category" class="form-label">Category</label>
                            <select asp-for="Challenge.Category" asp-items="Html.GetEnumSelectList<Challenge.CategoryType>()" class="form-control"></select>
                            <span asp-validation-for="Challenge.Category" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-4" style="background: linear-gradient(to right, #6a11cb, #2575fc); border: none;">Create Challenge</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
