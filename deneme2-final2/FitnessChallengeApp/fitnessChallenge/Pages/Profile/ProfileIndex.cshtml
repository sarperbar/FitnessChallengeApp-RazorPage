@page
@model fitnessChallenge.Pages.Profile.IndexModel
@using fitnessChallenge.Models
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">My Favorite Challenges</h2>

    <div class="row">
        @if (Model.FavoriteChallenges != null && Model.FavoriteChallenges.Count > 0)
        {
            foreach (var favorite in Model.FavoriteChallenges)
            {
                var challenge = favorite.Challenge;
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@challenge.Title</h5>
                            <p class="card-text">@challenge.Description</p>
                            <p class="card-text">
                                <strong>Difficulty:</strong> @challenge.DifficultyLevel.ToString() <br />
                                <strong>Category:</strong> @challenge.Category.ToString()
                            </p>
                            <p class="card-text">
                                <small class="text-muted">Start Date: @challenge.StartDate.ToShortDateString()</small> <br />
                                <small class="text-muted">End Date: @challenge.EndDate.ToShortDateString()</small>
                            </p>
                            <a asp-page="/Challenges/Review" asp-route-id="@challenge.Id" class="btn btn-secondary">Review Challenge</a>
                            <form method="post" asp-page-handler="RemoveFavorite" asp-route-favoriteId="@favorite.Id" class="mt-2">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    You have no favorite challenges yet. <a href="/Challenges" class="alert-link">Explore challenges</a>.
                </div>
            </div>
        }
    </div>
</div>
