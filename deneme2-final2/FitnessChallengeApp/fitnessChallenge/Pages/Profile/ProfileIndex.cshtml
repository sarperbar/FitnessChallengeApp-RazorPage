@page
@model fitnessChallenge.Pages.Profile.ProfileIndexModel
@using fitnessChallenge.Models
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 text-center">
            
                
                <div>    
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="img-fluid rounded-circle mb-3" style="max-width: 300px; max-height: 300px;" />
                    }
                    else
                    {
                        <p>No profile picture set.</p>
                    }
               </div>
            

            <div class="card shadow-sm p-3 mb-5 bg-white rounded">
                
                    
                    <p>@Model.Bio</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h2 class="text-center mb-4">My Favorite Challenges</h2>
            <div class="row">
                @if (Model.FavoriteChallenges != null && Model.FavoriteChallenges.Count > 0)
                {
                    foreach (var favorite in Model.FavoriteChallenges)
                    {
                        var challenge = favorite.Challenge;
                        <div class="col-md-6 mb-4">
                            <div class="card shadow-sm h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@challenge.Title</h5>
                                    <p class="card-text">@challenge.Description</p>
                                    <p class="card-text">
                                        <strong>Difficulty:</strong> @challenge.DifficultyLevel.ToString() <br />
                                        <strong>Category:</strong> @challenge.Category.ToString()
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">Start Date: @challenge.StartDate.ToShortDateString()</small> <br />
                                        <small class="text-muted">End Date: @challenge.EndDate.ToShortDateString()</small>
                                    </p>
                                    <div class="mt-auto d-flex justify-content-between">
                                        <a asp-page="/Challenges/Review" asp-route-id="@challenge.Id" class="btn btn-secondary">Review</a>
                                        <form method="post" asp-page-handler="RemoveFavorite" asp-route-favoriteId="@favorite.Id">
                                            <button type="submit" class="btn btn-danger">Remove</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-info text-center" role="alert">
                            You have no favorite challenges yet. <a href="/Challenges" class="alert-link">Explore challenges</a>.
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card-title {
        font-weight: bold;
        font-size: 1.25rem;
    }
    .card-text {
        font-size: 0.9rem;
    }
    .btn {
        margin: 5px 0;
    }
    .rounded-circle {
        border: 1px solid #ddd;
        padding: 5px;
    }
    .h-100 {
        height: 100%;
    }
    .d-flex {
        display: flex;
    }
    .flex-column {
        flex-direction: column;
    }
    .mt-auto {
        margin-top: auto;
    }
    .alert-link {
        color: #007bff;
    }
</style>
