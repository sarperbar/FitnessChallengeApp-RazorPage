@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var claims = await UserManager.GetClaimsAsync(user);
    var profilePictureUrl = claims.FirstOrDefault(c => c.Type == "ProfilePictureUrl")?.Value;

    <ul class="navbar-nav align-items-center">
        <li class="nav-item d-flex align-items-center">
            @if (!string.IsNullOrEmpty(profilePictureUrl))
            {
                <img src="@profilePictureUrl" alt="Profile Picture" class="rounded-circle" style="width: 40px; height: 40px; margin-right: 10px;">
            }
            <a class="nav-link d-inline" asp-area="" asp-page="/Challenges/Index">Challenges</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-page="/Challenges/Create">Create Challenge</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @User.Identity.Name
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Settings</a>
                <a class="dropdown-item" asp-area="" asp-page="/Profile/ProfileIndex">Profile</a>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index")" method="post">
                    <button type="submit" class="dropdown-item">Logout</button>
                </form>
            </div>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    </ul>
}
